<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainMessageLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_layout"
        android:background="@drawable/rounded_corner_sent"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10px"
        android:layout_marginEnd="80dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/white"
        android:id="@+id/left_message"
        android:textSize="20dp"
        android:layout_marginStart="10px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:padding="8dp"
        android:layout_marginEnd="10px"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner_received">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="@color/white"
            android:id="@+id/right_message"
            android:textSize="20dp"
            android:layout_marginEnd="10px"/>
    </LinearLayout>

</RelativeLayout>